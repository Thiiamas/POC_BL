@* MusicCard.razor *@

<div class="music-card">
    <h3>@MusicName</h3>
</div>
<style>
    .music-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 10px;
        max-width: 300px;
        text-align: center;
        background-color: #fff;
    }

        .music-card h3 {
            margin: 0;
            font-size: 1.5em;
            color: #333;
        }
</style>
@code {
    [Parameter]
    public string MusicName { get; set; }
}

